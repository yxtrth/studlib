{
  "name": "student-library-fullstack",
  "version": "1.0.0",
  "description": "Student Library Management System - Full Stack Application",
  "main": "backend/complete-server.js",
  "scripts": {
    "start": "cd backend && node complete-server.js",
    "dev": "cd backend && nodemon complete-server.js",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "heroku-postbuild": "cd backend && npm install",
    "lint": "eslint . --ext .js,.jsx",
    "test": "jest --passWithNoTests",
    "postinstall": "npm run lint && npm run test"
  },
  "keywords": [
    "student",
    "library",
    "education",
    "mern",
    "fullstack"
  ],
  "author": "Student Library Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "joi": "^17.11.0",
    "ioredis": "^5.3.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "socket.io": "^4.7.5",
